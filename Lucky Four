#include <iostream>
#include <algorithm>
using namespace std;
int main()
{
    int T;
    cin >> T;
    while (T--)
    {
        string a;
        cin >> a;
        int flag = 0;
        for (int i = 0; i < a.size(); i++)
        {
            if (a[i] == '4')
            {
                flag++;
            }
        }
        cout << flag << endl;
    }
}
